ORACLE를 사용하여 작성하였습니다.

/* DDL 부분 */
CREATE TABLE TEST (
    ID NUMBER PRIMARY KEY,
    NAME VARCHAR2(255) NOT NULL,
    PARENT_ID NUMBER,
    /* 순환관계를 위한 FK 제약 설정 */
    CONSTRAINT FK_PARENT FOREIGN KEY (PARENT_ID) REFERENCES TEST(ID)  ;
);

